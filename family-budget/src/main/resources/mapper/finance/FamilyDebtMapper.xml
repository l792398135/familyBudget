<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.finance.mapper.FamilyDebtMapper">
    
    <resultMap type="FamilyDebt" id="FamilyDebtResult">
        <result property="id"    column="id"    />
        <result property="debtMember"    column="debt_member"    />
        <result property="debtAmount"    column="debt_amount"    />
        <result property="debtDate"    column="debt_date"    />
        <result property="endDate"    column="end_date"    />
        <result property="debtRate"    column="debt_rate"    />
        <result property="borrowMember"    column="borrow_member"    />
        <result property="borrowTel"    column="borrow_tel"    />
        <result property="borrowIdcard"    column="borrow_idcard"    />
        <result property="brorrowRemark"    column="brorrow_remark"    />
        <result property="income"    column="income"    />
        <result property="status"    column="status"    />
        <result property="remark"    column="remark"    />
        <result property="createUser"    column="create_user"    />
        <result property="createDate"    column="create_date"    />
    </resultMap>

    <sql id="selectFamilyDebtVo">
        select id, debt_member, debt_amount, debt_date, end_date, debt_rate, borrow_member, borrow_tel, borrow_idcard, brorrow_remark, income, status, remark, create_user, create_date from family_debt
    </sql>

    <select id="selectFamilyDebtList" parameterType="FamilyDebt" resultMap="FamilyDebtResult">
        <include refid="selectFamilyDebtVo"/>
        <where>  
            <if test="debtMember != null  and debtMember != ''"> and debt_member = #{debtMember}</if>
            <if test="debtDate != null "> and debt_date &gt;= #{debtDate}</if>
            <if test="endDate != null "> and end_date &lt;= #{endDate}</if>
            <if test="borrowMember != null  and borrowMember != ''"> and borrow_member like concat('%', #{borrowMember}, '%')</if>
            <if test="createUser != null  and createUser != ''"> and create_user = #{createUser}</if>
            <if test="createDate != null "> and create_date = #{createDate}</if>
        </where> order by id desc
    </select>
    
    <select id="selectFamilyDebtById" parameterType="Long" resultMap="FamilyDebtResult">
        <include refid="selectFamilyDebtVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertFamilyDebt" parameterType="FamilyDebt">
        insert into family_debt
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="debtMember != null">debt_member,</if>
            <if test="debtAmount != null">debt_amount,</if>
            <if test="debtDate != null">debt_date,</if>
            <if test="endDate != null">end_date,</if>
            <if test="debtRate != null">debt_rate,</if>
            <if test="borrowMember != null">borrow_member,</if>
            <if test="borrowTel != null">borrow_tel,</if>
            <if test="borrowIdcard != null">borrow_idcard,</if>
            <if test="brorrowRemark != null">brorrow_remark,</if>
            <if test="income != null">income,</if>
            <if test="status != null">status,</if>
            <if test="remark != null">remark,</if>
            <if test="createUser != null">create_user,</if>
            <if test="createDate != null">create_date,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="debtMember != null">#{debtMember},</if>
            <if test="debtAmount != null">#{debtAmount},</if>
            <if test="debtDate != null">#{debtDate},</if>
            <if test="endDate != null">#{endDate},</if>
            <if test="debtRate != null">#{debtRate},</if>
            <if test="borrowMember != null">#{borrowMember},</if>
            <if test="borrowTel != null">#{borrowTel},</if>
            <if test="borrowIdcard != null">#{borrowIdcard},</if>
            <if test="brorrowRemark != null">#{brorrowRemark},</if>
            <if test="income != null">#{income},</if>
            <if test="status != null">#{status},</if>
            <if test="remark != null">#{remark},</if>
            <if test="createUser != null">#{createUser},</if>
            <if test="createDate != null">#{createDate},</if>
         </trim>
    </insert>

    <update id="updateFamilyDebt" parameterType="FamilyDebt">
        update family_debt
        <trim prefix="SET" suffixOverrides=",">
            <if test="debtMember != null">debt_member = #{debtMember},</if>
            <if test="debtAmount != null">debt_amount = #{debtAmount},</if>
            <if test="debtDate != null">debt_date = #{debtDate},</if>
            <if test="endDate != null">end_date = #{endDate},</if>
            <if test="debtRate != null">debt_rate = #{debtRate},</if>
            <if test="borrowMember != null">borrow_member = #{borrowMember},</if>
            <if test="borrowTel != null">borrow_tel = #{borrowTel},</if>
            <if test="borrowIdcard != null">borrow_idcard = #{borrowIdcard},</if>
            <if test="brorrowRemark != null">brorrow_remark = #{brorrowRemark},</if>
            <if test="income != null">income = #{income},</if>
            <if test="status != null">status = #{status},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="createUser != null">create_user = #{createUser},</if>
            <if test="createDate != null">create_date = #{createDate},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteFamilyDebtById" parameterType="Long">
        delete from family_debt where id = #{id}
    </delete>

    <delete id="deleteFamilyDebtByIds" parameterType="String">
        delete from family_debt where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>